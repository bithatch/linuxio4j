<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.target>1.7</maven.compiler.target>
		<maven.compiler.source>1.7</maven.compiler.source>

		<!-- Distribution properties. -->

		<releasesRepositoryLocation>http://artifactory.javassh.com/nervepoint-releases</releasesRepositoryLocation>
		<snapshotsRepositoryLocation>http://artifactory.javassh.com/nervepoint-snapshots</snapshotsRepositoryLocation>

		<siteDeploymentLocation>sftp://root@artifactory.javassh.com/var/www/nervepoint-site
		</siteDeploymentLocation>
	</properties>
	
	<modelVersion>4.0.0</modelVersion>
	<name>Linux I/O For Java</name>
	<description>A JNA based library providing access to some low-level Linux subsystems, including :-

* UInput. Read events from various devices such as keyboards, mice, touchpads, and all other devices exposed by Linux through uinput

* Frame Buffer. Write directly to the Linux framebuffer. Allows graphical user interfaces without X being present.</description>
	<artifactId>linuxio4j</artifactId>
	<groupId>com.nervepoint</groupId>
	<version>1.1-SNAPSHOT</version>

	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<testSourceDirectory>src/test/java</testSourceDirectory>
		<outputDirectory>target/classes</outputDirectory>
		<testOutputDirectory>target/test-classes</testOutputDirectory>
		<finalName>${project.artifactId}</finalName>
		<resources>
			<resource>
				<targetPath>.</targetPath>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<targetPath>.</targetPath>
				<directory>src/test/resources</directory>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<groupId>com.nativelibs4java</groupId>
				<artifactId>maven-jnaerator-plugin</artifactId>
				<version>0.12-SNAPSHOT</version>
				<configuration>
					<javaOutputDirectory>src/main/java</javaOutputDirectory>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	
	<distributionManagement>
		<repository>
			<uniqueVersion>false</uniqueVersion>
			<id>nervepoint-releases</id>
			<name>Nervepoint Releases</name>
			<url>${releasesRepositoryLocation}</url>
			<layout>default</layout>
		</repository>
		<snapshotRepository>
			<uniqueVersion>true</uniqueVersion>
			<id>nervepoint-snapshots</id>
			<name>Nervepoint Snapshots</name>
			<url>${snapshotsRepositoryLocation}</url>
			<layout>default</layout>
		</snapshotRepository>
		<site>
			<id>nervepoint-site</id>
			<url>${siteDeploymentLocation}/${project.artifactId}/</url>
		</site>
	</distributionManagement>
	
	
	<dependencies>
		<dependency>
			<groupId>net.java.dev.jna</groupId>
			<artifactId>jna</artifactId>
			<!-- <version>3.5.2</version> -->
			<version>4.1.0</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.7</version>
		</dependency>

		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
			<version>1.7.7</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	<repositories>


		<!-- Central Maven plugin repository - This is here as a work around to 
			try and stop Maven from loading SLF4J from Sonatype first .. which returns 
			a MOVED .. which Maven still ignores and so you end up with corrupted Jars 
			. -->

		<repository>
			<id>repo1</id>
			<url>http://repo1.maven.org/maven2</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>

		<repository>
			<id>sonatype</id>
			<name>Sonatype OSS Snapshots Repository</name>
			<url>http://oss.sonatype.org/content/groups/public</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>sonatype</id>
			<name>Sonatype OSS Snapshots Repository</name>
			<url>http://oss.sonatype.org/content/groups/public</url>
		</pluginRepository>
	</pluginRepositories>
</project>